GovernmentExamRegistration.jsx

import React from "react";
import "./GovernmentExamRegistration.css";
export default function GovernmentExamRegistration() {
function handleSubmit(e) {
e.preventDefault();
alert("Application Submitted Successfully!");
}
return (
<div className="bg">
<form className="form-card" onSubmit={handleSubmit}>
<h2>Government Exam Registration</h2>
<input type="text" placeholder="Full Name" required />
<input type="text" placeholder="Father's Name" required />
{/* Gender Radio */}
<div className="radio-box">
<label>
<input type="radio" name="gender" required /> Male
</label>
<label>
<input type="radio" name="gender" required /> Female
</label>
<label>
<input type="radio" name="gender" required /> Other
</label>
</div>
<input type="number" placeholder="Aadhaar Number" required />
<input type="email" placeholder="Email Address" required />
<input type="number" placeholder="Mobile Number" required />
{/* Photo Upload */}
<input type="file" accept="image/*" required />
{/* Address */}

<input type="text" placeholder="House No / Street" required />
<input type="text" placeholder="District" required />
<input type="text" placeholder="State" required />
<input type="number" placeholder="Pincode" required />
{/* Exam Dropdown */}
<select required>
<option value="">Select Exam</option>
<option>UPSC</option>
<option>SSC</option>
<option>RRB</option>
<option>Bank PO</option>
<option>Police Exam</option>
</select>
{/* Category */}
<select required>
<option value="">Select Category</option>
<option>General</option>
<option>OBC</option>
<option>SC</option>
<option>ST</option>
<option>EWS</option>
</select>
<input type="date" required />
<button type="submit">Submit Application</button>
</form>
</div>
);
}

